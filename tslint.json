{
  "extends": [
    "tslint-config-airbnb"
  ],
  "rules": {
    "import-name": false,
    "max-line-length": [
      true,
      {
        "limit": 100,
        "ignore-pattern": "^\\s\\*"
      }
    ],
    "no-any": true,
    "ordered-imports": true,
    "variable-name": [true, "allow-pascal-case"],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration"
    ]
  }
}
